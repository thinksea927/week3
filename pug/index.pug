extends layout
block content
	header.header
		.container.d-flex.flex-content-end.flex-align-center.h-100
			.header-block.fc-primary-dark
				h2 Promise-Desert 2020 早春系列
				h1 看得清，才能看得遠
	section.points
		.container
			.title.fz-6.text-center.fc-primary-dark.bold 用專業的心，做專業的事
			ul.d-flex.flex-content-between
				li
					.icon
						img(src="img-w3/icon-dollar.svg", alt="")
					p.text-center.fz-3.bolder.fc-primary-dark.mb-half 單一價格
					p 無論任何度數皆不需追加費用 即可擁有適合自己的薄型球面鏡片。
				li
					.icon
						img(src="img-w3/icon-clock.svg", alt="")
					p.text-center.fz-3.bolder.fc-primary-dark.mb-half 20 分鐘即可取件
					p 為了您的寶貴時間著想，以豐 富專業知識與技術將結帳到交 件的時間縮減至最快 20 分鐘 即可完成。
				li
					.icon
						img(src="img-w3/icon-heart.svg", alt="")
					p.text-center.fz-3.bolder.fc-primary-dark.mb-half 安心售後服務
					p 我們提供長達 120 天的保固售後服務，不限會員資格皆享有免費深層保養及專業維修服務。
				li
					.icon
						img(src="img-w3/icon-glasses.svg", alt="")
					p.text-center.fz-3.bolder.fc-primary-dark.mb-half 關於鏡片
					p 使用世界知名頂級品牌，抗UV、防汙鍍膜薄型非球面鏡片。
	section.classic
		.container
			.title.fz-6.text-center.fc-primary-dark.bold 經典系列鏡框
			.classic-block-upper.row.mb-4
				.col-8.mr-3
					img(src="img-w3/product-1.png", alt="")
				.col-4.d-flex.flex-align-center
					.classic-block-upper-icon
					p.font-style optical
			.classic-block-middle.row.mb-4.flex-row-reverse
				.col-8
					img(src="img-w3/product-2.png", alt="")
				.col-4.d-flex.flex-align-center.flex-content-end.pr-3
					.classic-block-middle-icon
					p.font-style sunglasses
			.classic-block-bottom.row
				.col-8.mr-3
					img(src="img-w3/product-3.png", alt="")
				.col-4.d-flex.flex-align-center
					.classic-block-bottom-icon
					p.font-style functional
	section.design
		.title.fz-6.text-center.fc-light.bold 聯名設計鏡框
		.design-upper.d-flex.mb-60
			.imgLeftCol.mr-1
				.img
					img(src="img-w3/product-4.png", alt="")
			.imgRightCol
				.mb-1
					img(src="img-w3/product-5.png", alt="")
				.d-flex
					.innerLeftCol.mr-1
						img(src="img-w3/product-6.png", alt="")
					.innerRightCol.d-flex.flex-column.flex-align-end
						div
							img.mb-1(src="img-w3/product-7.png", alt="")
						.more.relative
							img(src="img-w3/more.png", alt="")
							button.more-button.absolute.d-flex.flex-align-center(type="button") 
								//- span MORE
								//- img(src="img-w3/icon-arrow.svg", alt="")
								//- .block.absolute.fz-9.f-style.bold.fc-main MORE
		.container
			.design-bottom.d-flex.flex-align-center
				.left-img.fz-9.fc-main.bold.text-center Double A+
				.right-img.fz-9.fc-main.bold.text-center YOUTH
	
	section.recommand
		.title.fz-6.text-center.fc-light.bold 顧客推薦
		.container
			ul.d-flex.flex-content-between
				li.mr-3
					.img
					.recommand-content
						p.mb-2.bold Jessy
						p.mb-2 This is a wider card with supporting text below as a natural lead-in to additional content.
						p Last updated 3 mins ago
				li.mr-3
					.img
					.recommand-content
						p.mb-2.bold Karen
						p.mb-2 This is a wider card with supporting text below as a natural lead-in to additional content.
						p Last updated 3 mins ago
				li.mr-3
					.img
					.recommand-content
						p.mb-2.bold Chelsea	
						p.mb-2 This is a wider card with supporting text below as a natural lead-in to additional content.
						p Last updated 3 mins ago
